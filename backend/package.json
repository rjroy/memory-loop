{
  "name": "@memory-loop/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./streaming": "./src/streaming/index.ts"
  },
  "scripts": {
    "dev": "NODE_ENV=development bun run --watch src/index.ts",
    "build": "tsc --noEmit",
    "start": "bun run src/index.ts",
    "test": "LOG_LEVEL=silent bun test",
    "test:unit": "bun run test",
    "test:coverage": "LOG_LEVEL=silent bun test --coverage 2>&1 | awk '/^-+\\|/{p=1} p'",
    "test:coverage:full": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.4",
    "@anthropic-ai/sdk": "^0.39.0",
    "@memory-loop/shared": "workspace:*",
    "chokidar": "^5.0.0",
    "cron": "^4.4.0",
    "expr-eval": "^2.0.2",
    "fast-xml-parser": "^5.0.0",
    "gray-matter": "^4.0.3",
    "hono": "^4.6.0",
    "js-yaml": "^4.1.1",
    "lodash-es": "^4.17.22",
    "minisearch": "^7.1.1",
    "picomatch": "^4.0.3",
    "yaml": "^2.8.2",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/cron": "^2.4.3",
    "@types/expr-eval": "^1.1.2",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/picomatch": "^4.0.2",
    "bun-types": "^1.3.4",
    "typescript": "^5.7.2"
  }
}
