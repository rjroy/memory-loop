    "gray-matter": "^4.0.3",
    "hono": "^4.6.0",
    "js-yaml": "^4.1.1",
    "lodash-es": "^4.17.22",
    "minisearch": "^7.1.1",
    "picomatch": "^4.0.3",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/expr-eval": "^1.1.2",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/picomatch": "^4.0.2",
    "bun-types": "^1.1.43",
    "typescript": "^5.7.2"
